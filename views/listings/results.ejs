<%- layout("layouts/boilerplate.ejs") %>
<div class="container my-5">
    <h1 class="text-center mb-4">Suggested Hairstyles</h1>
    <p class="text-center text-muted mb-4">Based on your face shape: <strong><%= faceShape %></strong></p>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center">Recommended Hairstyles:</h4>
            <ul class="list-group">
                <% suggestions.forEach((hairstyle) => { %>
                    <li class="list-group-item"><%= hairstyle %></li>
                <% }); %>
            </ul>
        </div>
    </div>
    
    <div class="text-center mt-4">
        <a href="/scan" class="btn btn-outline-primary">Scan Again</a>
    </div>
</div>

  