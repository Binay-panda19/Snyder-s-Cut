<% layout('/layouts/boilerplate.ejs') %>
<h1 class="col-6 offset-3">SignUp on Snyder's Cut!</h1>
<div class="row">
    <div class="col col-6 offset-3">
        <form method="post" action="/signup" novalidate class="needs-validation">               
            <div class="mt-3 mb-3">
                <label for="username" class="form-label" >Username</label>
                <input name="username" id="username"  type="text" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mt-3 mb-3">
                <label for="email" class="form-label" >Email</label>
                <input name="email" id="email"  type="emial" class="form-control" required>
            </div>
                          
            <div class="mt-3 mb-3">
                <label for="password" class="form-label" >Password</label>
                <input name="password" id="password"  type="password" class="form-control" required>
            </div>
            <button class="btn btn-dark mb-3 "> SignUp</button>
        </form>
    </div>
</div>
